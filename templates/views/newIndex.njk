{% extends "../layouts/default.njk" %}

{% block content %}
	<div class="container">

    			</div>

	<div class="container">
		<div class="row">
			<!-- Colonne gauche (accÃ¨s aux articles) -->
			<div class="col-md-9">

					{% if annonces.length %}
						<div class="row">
							{% for annonce in annonces %}
								<div class="col-md-12">
									<div class="occ-banner">
										<a href="/blog/post/{{ annonce.slug }}">
											<img src="/images/megaphone.png">
											{{ annonce.title }}
										</a>
									</div>
								</div>
							{% endfor %}
						</div>
					{% endif %}

					{% include "./index/articlesCarousel.njk" %}

					<div class="row">

						<div class="col-md-6">
							{% include "./index/resultats.njk" %}
						</div>

						<div class="col-md-6">
							{% include "./index/tournois.njk" %}
						</div>

					</div>

					{% include "./index/evenements.njk" %}

			</div>

			<!-- Colonne droite (Twitter, tournoi...) -->
			<div class="col-md-3">

				<div class="row occ-section-social">
					<div class="col-xs-4 text-center">
						<a href="https://twitter.com/{{env.TWITTER_ACCOUNT}}" target="_blank">
							<img alt="Twitter" src="/images/twitter.png" />
						</a>
					</div>
					<div class="col-xs-4 text-center">
						<a href="https://www.facebook.com/groups/{{env.FB_GROUP_ID}}/?fref=ts" target="_blank"	>
							<img alt="Facebook" src="/images/facebook.png" />
						</a>
					</div>
					<div class="col-xs-4 text-center">
						<a href="/feed" target="_blank">
							<img alt="RSS" src="/images/rss.png" />
						</a>
					</div>
				</div>

				{% include "./index/commentaires.njk" %}

				{% include "./index/twitter.njk" %}

				{% include "./index/video.njk" %}

			</div>

		</div>

	</div>
{% endblock %}
